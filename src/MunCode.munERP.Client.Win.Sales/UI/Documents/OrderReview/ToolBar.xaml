<UserControl x:Class="MunCode.munERP.Client.Win.Sales.UI.Documents.OrderReview.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resources="clr-namespace:MunCode.munERP.Client.Win.Sales.Resources"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d">
    <ToolBarTray>
        <ToolBar>
            <Button Content="{x:Static resources:Translation.AddItem}" cal:Message.Attach="[Event Click] = [Action AddItem]"/>
        </ToolBar>
    </ToolBarTray>
</UserControl>
